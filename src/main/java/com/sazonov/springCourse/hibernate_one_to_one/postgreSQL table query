CREATE TABLE details (
  id SERIAL PRIMARY KEY,
  city VARCHAR(15),
  phone_number VARCHAR(25),
  email VARCHAR(30)
);

CREATE TABLE employees (
  id SERIAL PRIMARY KEY,
  name VARCHAR(15),
  surname VARCHAR(25),
  department VARCHAR(20),
  salary INT,
  details_id INT,
  FOREIGN KEY (details_id) REFERENCES details(id)
);
